<mvc:View
	controllerName="employees.controller.App"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
>
	<Shell>
		<App id="app">
			<pages>
				<Page title="{i18n>title}">
					<content>
						<HBox>
							<Label
								id="labelEmployee"
								class="sapUiSmallMargin"
								text="{i18n>labelEmployee}"
							/>
							<Input
								id="inputEmployee"
								class="sapUiSmallMarginEnd"
								maxLength="6"
								value="{/EmployeeId}"
								width="200px"
							/>
							<Label
								id="labelCountry"
								class="sapUiSmallMargin"
								text="{i18n>labelCountry}"
							/>
							<Select
								id="selectCountry"
								items="{/ListCountry}"
								selectedKey="{/CountryKey}"
								forceSelection="false"
							>
								<items>
									<core:Item
										key="{Key}"
										text="{Text}"
									/>
								</items>
							</Select>
							<Button
								id="btnFilter"
								class="sapUiSmallMarginEnd"
								icon="sap-icon://search"
								press="onFilter"
							/>
							<Button
								id="btnClearFilter"
								class="sapUiSmallMarginEnd"
								icon="sap-icon://clear-filter"
								press="onClearFilter"
							/>
							<Button
								text="Array de Items=Registros=Entidades=Rows"
								press=".getRegistros"
								tooltip="Mira la consola"
							/>
						</HBox>
						<HBox>
							<Panel
								expandable="true"
								expanded="true"
								headerText="Panel Tabla de Empleados"
							>
								<content>
									<Table
										id="tableEmployee"
										items="{/Employees}"
										headerText="Employees: ({/Amount})"
									>
										<columns>
											<Column>
												<Text text="{i18n>tableId}"/>
											</Column>
											<Column>
												<Text text="{i18n>tableName}"/>
											</Column>
											<Column>
												<Text text="{i18n>tableCountry}"/>
											</Column>
											<Column>
												<Text text="{i18n>tableCity}"/>
											</Column>
										</columns>
										<items>
											<ColumnListItem
												press="onMessage"
												type="Active"
											>
												<cells>
													<ObjectIdentifier title="{EmployeeID}"/>
													<Text text="{FirstName} {LastName}"/>
													<Text text="{Country}"/>
													<Text text="{City}"/>
												</cells>
											</ColumnListItem>
										</items>
									</Table>
								</content>
							</Panel>
						</HBox>
						<Text text=""/>
						<HBox>
							<Panel
								expandable="true"
								expanded="true"
								headerText="Panel Tabla de Examen"
							>
								<content>
									<Table
										headerText="Este es el header de la tabla de Examenes"
										items="{modeloTests>/test01}"
									>
										<columns>
											<Column>
												<Label text="PREGUNTA"/>
											</Column>
											<Column>
												<Label text="Respuesta 1"/>
											</Column>
											<Column>
												<Label text="Respuesta 2"/>
											</Column>
										</columns>
										<items>
											<ColumnListItem>
												<cells>
													<Label
														text="{modeloTests>question}"
														wrapping="true"
													/>
													<RadioButton
														text="{modeloTests>correctAnswer}"
														groupName="{modeloTests>groupId}"
														select=".onRadioButtonSelect"
													/>
													<FlexBox wrap="Wrap">
														<RadioButton
															text="{modeloTests>answer2}"
															groupName="{modeloTests>groupId}"
															select=".onRadioButtonSelect"
														/>
													</FlexBox>
												</cells>
											</ColumnListItem>
										</items>
									</Table>
								</content>
							</Panel>
						</HBox>
						<Text text=""/>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>